#include <iostream>
#include <conio.h>

using namespace std;

int main()

{
	int x=0, n, z;
	cout << "Enter a number: ";
	cin >> n;
	
	for (z=1; z<=n;++z)
	{
	x += z;
	}
	if (n==0)
		cout << "Thank You!";
	else
		cout << "The sum of all whole numbers from 1 to " << n << " is " << x;
	
	_getch();
	return 0;
}
