#include <iostream>
#include <conio.h>

using namespace std;

int main()

{
	int x=0, n;
	cout << "Enter a number: ";
	cin >> n;
	
	for (int i=1; i<=n; ++i)
	{
	x += i;
	}
	if (n==0)
		cout << "Thank You!";
	else
		cout << "The sum of all whole numbers from 1 to " << n << " is " << x;
	
	_getch();
	return 0;
}
